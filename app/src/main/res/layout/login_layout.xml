<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/tab_background"
    >
    <RelativeLayout
        android:background="@mipmap/login_top_bg"
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160">
        <ImageView
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_69"
            android:src="@mipmap/iv_login_head"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="@color/tab_background"
            android:textSize="@dimen/sp_15"
            android:text="未登录"
            android:id="@+id/tv_name"
            android:layout_below="@id/iv_logo"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@id/rl_top"
        android:paddingBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37">

        <!--商家13828833333-->
        <!--业务员13828833412-->
        <ImageView
            android:id="@+id/iv_phone"
            android:src="@mipmap/img_phone"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_phone"
            android:inputType="number"
            android:id="@+id/et_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="5"
            android:background="@null"
            android:maxLength="11"
            android:hint="请填写您注册的手机号码"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_clear"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_clearLoginPhoneNum"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/delete" />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/line"
            android:layout_below="@id/et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color_gray"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line"
            android:id="@+id/iv_pwd"
            android:src="@mipmap/img_pwd"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_pwd"
            android:layout_marginTop="@dimen/dp_7"
            android:inputType="textPassword"
            android:layout_below="@id/line"
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入密码"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line"
            android:layout_alignParentRight="true"
            android:id="@+id/rl_clear_pwd"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_clearPwd"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/delete" />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@id/et_pwd"
            android:id="@+id/line_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color_gray"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line_one"
            android:id="@+id/iv_code"
            android:src="@mipmap/img_code"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30" />
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_code"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line_one"
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line_one"
            android:layout_toRightOf="@id/et_code"
            android:id="@+id/rl_clear_code"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_clearCode"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/delete" />
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/line_one"
            android:layout_toRightOf="@id/rl_clear_code"
            android:id="@+id/identifyingcode_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            />

        <View
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@id/et_code"
            android:id="@+id/line_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color_gray"
            />
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/line_two"
            android:id="@+id/loginWeixinButton"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@mipmap/btn_weixin"
            />
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loginWeixinButton"
            android:id="@+id/loginButton"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@mipmap/btn_login"
             />
        <View
            android:layout_marginTop="@dimen/dp_21"
            android:background="@color/defaultBlueColor"
            android:layout_below="@id/loginButton"
            android:layout_centerInParent="true"
            android:id="@+id/middel"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_16"/>

            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/middel"
                android:id="@+id/tv_findpwd"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_below="@id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textSize="@dimen/sp_15"
                android:textColor="#416AF2"
                />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/middel"
            android:id="@+id/tv_register"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_below="@id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textSize="@dimen/sp_15"
            android:textColor="#416AF2"
            />

    </RelativeLayout>


</RelativeLayout>
        