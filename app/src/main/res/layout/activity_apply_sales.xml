<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#dce7ed"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择服务类型"
            android:textColor="@color/tab_background"
            android:textSize="@dimen/sp_15" />


        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@mipmap/white_back"
            android:gravity="center_vertical"
            android:scaleType="fitCenter" />
        <View
            android:id="@+id/view_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_shopName"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_below="@id/tv_shopName"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/iv_pic"
            android:layout_below="@id/tv_order_no"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_shopName"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical|right"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_toRightOf="@id/iv_pic"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_below="@id/tv_order_no"
            android:textColor="@color/text_color_black"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_toRightOf="@id/iv_pic"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/tv_info"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_below="@id/tv_user_name"
            android:maxLines="1"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12"
            android:layout_width="@dimen/dp_200"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_toRightOf="@id/iv_pic"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/tv_num"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_below="@id/tv_info"
            android:maxLines="1"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_12"
            android:layout_width="@dimen/dp_200"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_10"
            android:layout_below="@id/tv_time"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tuikuan"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <View
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_above="@id/middle"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要退款（无需退货）"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/text_title_gray"
            android:textSize="@dimen/sp_10"
            android:layout_below="@id/middle"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没收到货，或与商家协商同意不用退货只退款"
            />
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/img_update_address_right"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tuihuo"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <View
            android:id="@+id/middle1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_above="@id/middle1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要退货退款"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/text_title_gray"
            android:textSize="@dimen/sp_10"
            android:layout_below="@id/middle1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已收到货，需要退还收到的货物"
            />
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/img_update_address_right"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_huanhuo"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <View
            android:id="@+id/middle2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_above="@id/middle2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换货"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/text_title_gray"
            android:textSize="@dimen/sp_10"
            android:layout_below="@id/middle2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品存在质量问题，联系商家协商换货"
            />
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/img_update_address_right"
            />
    </RelativeLayout>
</LinearLayout>
        