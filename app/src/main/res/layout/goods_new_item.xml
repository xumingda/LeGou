<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:background="@color/tab_background"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">




        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/img_good"
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            />

        <TextView
            android:padding="@dimen/dp_5"
            android:id="@+id/tv_title"
            android:layout_below="@+id/iv_pic"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:maxLines="2"
            />
        <TextView
            android:padding="@dimen/dp_5"
            android:id="@+id/tv_old_price"
            android:layout_below="@+id/tv_title"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"

            />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_below="@id/tv_old_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_price"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textColor="@color/tab_background"
                android:background="@drawable/shape_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_num"
                android:gravity="center"
                android:padding="@dimen/dp_5"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:id="@+id/rl_right"
        android:background="@color/tab_background"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">




        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/img_good"
            android:id="@+id/iv_pic_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            />

        <TextView
            android:padding="@dimen/dp_5"
            android:id="@+id/tv_title_right"
            android:layout_below="@+id/iv_pic_right"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:maxLines="2"
            />
        <TextView
            android:padding="@dimen/dp_5"
            android:id="@+id/tv_old_price_right"
            android:layout_below="@+id/tv_title_right"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"

            />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_below="@id/tv_old_price_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_price_right"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:textColor="@color/tab_background"
                android:background="@drawable/shape_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_num_right"
                android:gravity="center"
                android:padding="@dimen/dp_5"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>