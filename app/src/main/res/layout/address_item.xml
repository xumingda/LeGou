<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">




        <TextView
            android:textColor="@color/tab_background"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@mipmap/img_address"
            android:id="@+id/tv_head"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            />



        <TextView
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_head"
            android:id="@+id/tv_name"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"

            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            />
        <TextView
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_name"
            android:id="@+id/tv_phone"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            />
        <TextView
            android:textSize="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:background="#ead2b8"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_head"
            android:id="@+id/tv_moren"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="默认"
            android:textColor="#f37818"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_edit"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:text="编辑"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:id="@+id/line"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_edit"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_40"
            android:background="@color/text_black"
            />
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/line"
            android:textSize="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_moren"
            android:id="@+id/tv_address"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
</RelativeLayout>