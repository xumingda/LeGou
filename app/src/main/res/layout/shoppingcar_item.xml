<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/tab_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <CheckBox
            android:id="@+id/ch_good"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/checkb_select"
            android:button="@null"
            android:checked="true" />

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ch_good"
            android:background="@color/text_color_gray" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_good"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_good_dec"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_good_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_good"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />



        <EditText
            android:layout_toRightOf="@id/tv_good_dec"
            android:background="#ddf3ff"
            android:id="@+id/et_num"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="-10dp"
            android:gravity="center"
            android:inputType="number"
            android:text="1" />
        <TextView
            android:id="@+id/tv_reduce"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_good_dec"
            android:background="@mipmap/img_reduce"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/et_num"
            android:background="@mipmap/img_add"
            android:gravity="center"
             />


        <TextView
            android:id="@+id/tv_good_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_good"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:background="@mipmap/img_car_delete"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white" />
</LinearLayout>